html(ng-app='datapizz')
    head
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/angular-material/0.11.4/angular-material.css')
        link(rel='stylesheet', href='stylessheets/main.css')

    body(ng-controller='MainController as main')
        md-toolbar(layout='row')
            a(href='').toolbar-logo
                span.bar
                span.bar
                span.bar
            h1.md-toolbar-tools.toolbar-title Datapizz
            span.flex
            md-button(md-no-ink='md-no-ink', ng-if='!main.connected', ng-click='main.connect()') Se connecter
            md-button(md-no-ink='md-no-ink', ng-if='main.connected') Connect&eacute;
        section(layout='row', layout-align='center center', ng-controller='MainGraphController as graphCtrl', ng-if='main.connected')
            div.col-xs-12
                section(layout='row')
                    main-graph.graph(collection='graphCtrl.entities', itemselected='')
                section(layout='row')
                    md-datepicker(ng-model="graphCtrl.beginDate", md-min-date="graphCtrl.minDate", md-max-date="graphCtrl.maxDate",
                                    md-placeholder="Enter min date").datepicker
                    md-datepicker(ng-model="graphCtrl.endDate", md-min-date="graphCtrl.minDate", md-max-date="graphCtrl.maxDate",
                                    md-placeholder="Enter max date").datepicker
                    md-button(ng-click='graphCtrl.dateChanged()') Go !


    script(src='https://code.jquery.com/jquery-2.1.4.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.8/angular-animate.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.8/angular-aria.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-material/0.11.4/angular-material.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js')
    script(src='https://cdn.firebase.com/js/client/2.3.2/firebase.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angularFire/1.1.3/angularfire.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.9/d3.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/3.10.1/lodash.min.js')
    script(src='http://momentjs.com/downloads/moment.min.js')

    script(src='javascripts/app.js')
    script(src='javascripts/controllers/MainController.js')
    script(src='javascripts/directives/MainGraph.js')
    script(src='javascripts/services/Entities.js')
    script(src='javascripts/services/Server.js')